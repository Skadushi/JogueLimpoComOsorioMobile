{
  "expo": {
    "name": "Jogue Limpo",
    "slug": "JogueLimpo",
    "privacy": "public",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#446D44"
    },
    "updates": {
      "fallbackToCacheTimeout": 30
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "br.gov.rs.osorio.joguelimpo",
      "buildNumber": "2",
      "supportsTablet": true,
      "requireFullScreen": false,
      "infoPlist": {
        "NSCameraUsageDescription": "Este aplicativo usa a câmera para capturar imagens que podem ser usadas no cadastro de denúncias.",
        "NSPhotoLibraryUsageDescription": "Este aplicativo permite que você envie fotos da sua biblioteca para cadastro de denúncias."
      }
    },
    "android": {
      "package": "br.gov.rs.osorio.joguelimpo",
      "versionCode": 0,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE", 
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "packagerOpts": {
      "sourceExts": [
        "js",
        "json",
        "ts",
        "tsx",
        "jsx"
      ]
    },
    "androidStatusBar": {
      "backgroundColor": "#446D44"
    }
  }
}
